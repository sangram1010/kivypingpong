#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            source: 'ball.png'
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 50, 350
    canvas:
        Rectangle:
            source: 'rect.jpg'
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'back.jpg'

    canvas:
        Rectangle:
            id: middleLine
            source: 'score.jpg'
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        id: score1
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        id: score2
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y

    Button:
        id: btnExit
        text: 'Exit'
        on_press: app.stop()
        pos: 52, 1
        size: 35, 30

    Button:
        id: btnPause
        text: 'Pause'
        on_press:
            root.remove_widget(player_right)
            root.remove_widget(player_left)
            root.remove_widget(score1)
            root.remove_widget(score2)
        pos: 1, 1
        size: 50, 30

    Button:
        id: btnResume
        text: 'Resume'
        on_press:
            root.add_widget(player_right)
            root.add_widget(player_left)
            root.add_widget(score1)
            root.add_widget(score2)
        pos: 88, 1
        size: 58, 30

